            <Font size="20.0" />
         </font>
      </PasswordField>
      <PasswordField fx:id="newPWD" layoutX="195.0" layoutY="254.0" prefHeight="44.0" prefWidth="402.0" promptText="your new password">
         <font>
            <Font size="20.0" />
         </font>
      </PasswordField>
      <PasswordField fx:id="confirmPWD" layoutX="195.0" layoutY="330.0" prefHeight="44.0" prefWidth="402.0">
         <font>
            <Font size="20.0" />
         </font>
      </PasswordField>
        <Button layoutX="90.0" layoutY="562.0" mnemonicParsing="false" onAction="#confirmButtonClick" prefHeight="57.0" prefWidth="123.0" text="Confirm">
            <font>
                <Font size="25.0" />
            </font></Button>
        <Button layoutX="417.0" layoutY="562.0" mnemonicParsing="false" onAction="#backButtonClick" prefHeight="57.0" prefWidth="123.0" text="Back">
            <font>
                <Font size="25.0" />
            </font></Button>
    </children>
</AnchorPane>
